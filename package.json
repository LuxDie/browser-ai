{
  "name": "browser-ai",
  "version": "0.1.0-beta",
  "description": "Browser AI - Chrome extension for translation using built-in AI APIs",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/chrome": "^0.0.268",
    "@types/dom-chromium-ai": "^0.0.10",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@webext-core/fake-browser": "^1.3.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.12",
    "vitest": "^3.2.4",
    "wxt": "^0.20.11"
  },
  "overrides": {
    "@wxt-dev/storage": "1.2.0"
  },
  "dependencies": {
    "@webext-core/messaging": "^2.3.0"
  }
}
